<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height ="match_parent"
    android:background="@drawable/unsplash_sky_kenrick"
    tools:context=".CreateAccount">

    <TextView
        android:id="@+id/appName"
        android:text="S E R E N I T Y"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/roboto_light"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/CreateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/create_accountlogo"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/User"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:fontFamily="sans-serif-light"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#313131" />

    <EditText
        android:id="@+id/createPassword"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#313131" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/createPassword"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/re_enter_password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#313131" />

    <Button
        android:id="@+id/Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPassword"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/create" />

    <EditText
        android:id="@+id/User"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CreateText"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/user"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#313131" />

</RelativeLayout>
